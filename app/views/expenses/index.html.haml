%div.page-header
  %h1 ALL 経費
%div.filters
  %button.btn.btn-sm= link_to "未対応", controller: "expenses", action: "index", status: :pending
  %button.btn.btn-sm= link_to "承認済", controller: "expenses", action: "index", status: :approved
  - if current_user.admin?
    %button.btn.btn-sm= link_to "却下済", controller: "expenses", action: "index", status: :rejected
    %span.dropdown
      %a.dropdown-toggle{:href => "#", "role" => "button", "data-toggle" => "dropdown", "data-target" => "#", class: "btn btn-primary btn-sm"}
        人物でフィルター
        %b.caret
      %ul.dropdown-menu{"role" => "menu"}
        - current_user.company.users.each do |user|
          %li
            =link_to user.name, controller: "expenses", action: "index", user: user
  - else
    %button.btn.btn-sm= link_to "取り消し済", controller: "expenses", action: "index", status: :rejected
- @expenses.each do |expense|
  = render "expenses/expense", expense: expense
= paginate @expenses
